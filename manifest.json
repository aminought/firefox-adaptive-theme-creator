{
  "manifest_version": 2,
  "name": "Favicon Color",
  "version": "1.1.1",

  "description": "Calculates the most popular favicon color for a website and applies it to the current tab.",

  "permissions": [
    "theme",
    "tabs",
    "storage",
    "notifications"
  ],

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "background": {
    "scripts": [
      "lib/chroma.min.js",
      "background/colors.js",
      "background/images.js",
      "background/notifications.js",
      "background/options.js",
      "background/theme.js",
      "background/cache.js",
      "background/background.js"
    ]
  },
  
  "options_ui": {
    "page": "options/options.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{3aebb6e1-b5e5-440f-a5e7-1fe875078e3d}"
    }
  }
}
