{
  "manifest_version": 2,
  "name": "Favicon Color",
  "version": "1.2",

  "description": "Calculates the most popular favicon color for a website and applies it to the current tab.",

  "permissions": [
    "theme",
    "tabs",
    "storage",
    "notifications"
  ],

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "background": {
    "scripts": [
      "lib/chroma.min.js",
      "background/background.js"
    ],
    "type": "module"
  },
  
  "options_ui": {
    "page": "options/options_page.html"
  },

  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Favicon Color",
    "default_popup": "popup/popup.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{3aebb6e1-b5e5-440f-a5e7-1fe875078e3d}"
    }
  }
}
